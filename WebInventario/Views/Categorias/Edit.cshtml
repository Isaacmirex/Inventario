@model WebInventario.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

    <style>
        body {
            background-image: url("https://img.freepik.com/vector-premium/mujer-almacen-comprobando-niveles-inventario-mercancias-estanteria_327176-153.jpg?w=2000");
            background-size: cover;
            background-repeat: no-repeat;           
        }
    </style>
    
<div style="background-color: rgba(255, 255, 255, 0.5);">

<h1>Edit</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="cat_id" class="control-label"><b>ID Categoria</b></label>
                <input asp-for="cat_id" class="form-control" readonly="readonly" />
                <span asp-validation-for="cat_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cat_nombre" class="control-label"><b>Nombre Categoría</b></label>
                    <input asp-for="cat_nombre" class="form-control" onchange="validateForm(this)"
                                                                        oninput="validateInput(this)" />
                <span asp-validation-for="cat_nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cat_descripcion" class="control-label"><b>Descripción</b></label>
                    <input asp-for="cat_descripcion" class="form-control" onchange="validateForm(this)"
                                                                            oninput="validateInput(this)" />
                <span asp-validation-for="cat_descripcion" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-success m-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
        </svg> Regresar
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function validateForm(input) {
            
            if (/\s/.test(input.value)) {
                input.value = input.value.trim()
            }
        }
    </script>

    <script>
        function validateInput(input) {
                var patron = /^[a-zA-Z0-9áéíóúÁÉÍÓÚñÑ]+\s?[a-zA-Z0-9áéíóúÁÉÍÓÚñÑ]+$/;
            
            if (!patron.test(input.value)) {
                input.value = input.value.replace(/[^a-zA-Z0-9áéíóúÁÉÍÓÚñÑ\s]+/g, '').replace(/\s{2,}/g, ' ');
            }
        }
    </script>
}
