@model WebInventario.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-image: url("https://img.freepik.com/vector-premium/mujer-almacen-comprobando-niveles-inventario-mercancias-estanteria_327176-153.jpg?w=2000");
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div style="background-color: rgba(255, 255, 255, 0.5);">

<h1>Details</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <h7> ID Producto </h7>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.prod_id)
        </dd>
        <dt class = "col-sm-2">
            <h7> Nombre Producto </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_nombre)
        </dd>
        <dt class = "col-sm-2">
            <h7> Descripción </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_descripcion)
        </dd>
        <dt class = "col-sm-2">
            <h7> IVA </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_iva)
        </dd>
        <dt class = "col-sm-2">
            <h7> Costo </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_costo)
        </dd>
        <dt class = "col-sm-2">
            <h7> Precio de Venta </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_pvp)
        </dd>
        <dt class = "col-sm-2">
            <h7> Estado </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_estado)
        </dd>
        <dt class = "col-sm-2">
            <h7> Stock </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_stock)
        </dd>
        <dt class = "col-sm-2">
            <h7> Categoría </h7>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.cat_nombre) -
            @Html.DisplayFor(model => model.Categoria.cat_id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.prod_id" style="color:black">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
        </svg> Editar
    </a> |
    <a asp-action="Index" class="btn btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
        </svg> Regresar
    </a>
</div>
